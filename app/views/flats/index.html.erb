<h1>All our Flats (<%= Flat.all.count %>)</h1>

<ul class="ul-flats">
  <div class="cards-container">
    <% @flats.each do |flat| %>
        <li class="flat-card">
          <div class="flat-info">
            <h3><%= flat.name %></h3>
            <h4><%= flat.address %></h4>
            <div class="icons-list">
              <p><i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></p>
              <p><i class="fa-solid fa-users"></i> <%= flat.number_of_guests %></p>
              <p><%= flat.size %>mÂ²</p>
            </div>
          </div>
          <div class="more-info">
            <p><%= link_to "More Info", flat_path(flat) %></p>
          </div>
        </li>
    <% end %>
  </div>
</ul>
